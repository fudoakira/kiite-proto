<%= render "shared/header" %>

<div class='main'>

  <div class='call-contents'>
    <h2 class='call-title'>
      気軽に相談してみよう！
    </h2>
  </div>

  <div class='user-lists'>
    <div class='login-user'>
      <h2 class='login-user-title'>
        ログイン中ユーザー
      </h2>
      <div class='user-wrapper'>
        <%#= link_to image_tag(.image, class: :user_image) %>
        <%= image_tag "IMG_5123.JPG", class: :user_image %>
        <div class='user-body'>
          <%#= link_to class: :header-comment %>
          <p class='header-comment'>気軽にどうぞ</p>
          <%#= link_to class: :user-name %>
          <p class='user-name'>遼太郎</p>
          <p class='rating-star'>
            <%= image_tag "star-on.png" %>
          </p>
          <div class='tag-list'>
            <p>仕事 なんでも</p>
          </div>
        </div>
      </div>
    </div>

    <div class='high-rate-user'>
      <h2 class='high-rate-user-title'>
        評価の高いユーザー
      </h2>
      <div class='user-wrapper'>
        <%#= link_to image_tag(.image, class: :user_image) %>
        <div class='user-body'>
          <%#= link_to class: :header-comment %>
          <%#= link_to class: :user-name %>
          <p class='rating-star'>
            <%#= %>
          </p>
          <div class='tag-list'>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>